<%- include('../partials/header')-%>

<div class="row">
        <h1 class='text-center'>Edit Info</h1>
        <div style='max-width:30%; margin:25px auto;'>
            <form action="/user/<%=user.username%>?_method=put" method="post" accept-charset="utf-8">
                <div class='form-group'>
                        <label>First Name: <span class="necessary">*<span></span></label>
                    <input class='form-control' type="text" name="user[firstname]" value="<%=user.firstname%>"register>
                </div>
                <div class='form-group'>
                        <label>Last Name: <span class="necessary">*<span></span></label>
                    <input class='form-control' type="text" name="user[lastname]" value="<%=user.lastname%>" required>
                </div>
                <div class='form-group'>
                        <label>Email: <span class="necessary">*<span></span></label>
                    <input class='form-control' type="email" name="user[email]" value="<%=user.email%>" required>
                </div>
                <div class='form-group'>
                        <label>Avatar URL:</label>
                    <input class='form-control' type="text" name="user[avatar]" value="<%=user.avatar%>">
                </div>
                <div class='form-group'>
                    <button class='btn btn-primary btn-lg btn-block'>Submit</button>
                </div>
            </form>
            <a href="/user/<%=user.username%>">Go Back!</a>
        </div>
</div>

<%- include('../partials/footer')-%>