<%- include('../partials/header')-%>


<h1 class='text-center'>Edit <%= campground.name %></h1>
	<div style='max-width:30%; margin:25px auto;'>
		<form action="/campgrounds/<%= campground._id%>?_method=put" method="post" accept-charset="utf-8">
			<div class='form-group'>
				<label for="location">Campground Name: </label>
				<input class='form-control' type="text" name="campground[name]" value="<%=campground.name%>">
			</div>
			<div class='form-group'>
				<label for="location">Price: </label>
				<input class='form-control' type="number" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01" >
			</div>
			<div class='form-group'>
				<label for="location">Image URL: </label>
				<input class='form-control' type="text" name="campground[url]" value="<%=campground.url%>">
			</div>
			<div class='form-group'>
				<label for="location">Description:</label>
				<textarea name="campground[desc]" cols="30" rows="5" class="form-control txtarea"><%=campground.desc%></textarea>
			</div>
			<div class="form-group">
				<label for="location">Location:</label>
				<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
			</div>
			<div class='form-group'>
				<button class='btn btn-primary btn-lg btn-block'>Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back!</a>
	</div>

<%- include('../partials/footer')-%>